<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_bg">

    <TextView
        android:id="@+id/tvTopic"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:background="@color/view_bg"
        android:text="Topic: #testing"
        android:textColor="@color/edit_hint_color"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvTopic"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingStart="12dp"
        app:layout_constraintBottom_toTopOf="@+id/sendBlock"
        app:layout_constraintTop_toBottomOf="@+id/tvTopic" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/sendBlock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingEnd="16dp"
        android:background="@color/control_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rvTopic">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tiTopic"
            style="@style/ThemeOverlay.App.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingVertical="6dp"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            app:boxCornerRadiusBottomEnd="90dp"
            app:boxCornerRadiusBottomStart="90dp"
            app:boxCornerRadiusTopEnd="90dp"
            app:boxCornerRadiusTopStart="90dp"
            app:boxBackgroundColor="@color/edit_bg"
            app:hintEnabled="false"
            app:layout_constraintBottom_toTopOf="@id/tiMessage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <EditText
                android:id="@+id/etTopicName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/edit_hint_color"
                android:paddingStart="21dp"
                android:paddingVertical="11dp"
                android:hint="#testing"
                android:textColor="@color/purple_200" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tiMessage"
            style="@style/ThemeOverlay.App.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:paddingVertical="6dp"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            app:boxCornerRadiusBottomEnd="90dp"
            app:boxCornerRadiusBottomStart="90dp"
            app:boxCornerRadiusTopEnd="90dp"
            app:boxCornerRadiusTopStart="90dp"
            app:boxBackgroundColor="@color/edit_bg"
            app:hintEnabled="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/imgPlus"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tiTopic">

            <EditText
                android:id="@+id/etMessageBody"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/edit_hint_color"
                android:paddingStart="21dp"
                android:paddingVertical="16dp"
                android:hint="Написать..."
                android:textColor="@color/purple_200"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <ImageView
            android:id="@+id/imgPlus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="6dp"
            android:src="@drawable/ic_text_plus"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tiMessage"
            app:layout_constraintTop_toBottomOf="@id/tiTopic" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>