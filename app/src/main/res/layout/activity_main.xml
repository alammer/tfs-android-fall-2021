<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <com.example.tfs.customviews.PostLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="4dp">

        <com.example.tfs.customviews.UserAvatarView
            android:id="@+id/imgAvatar"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_marginStart="4dp"
            android:src="@drawable/bad" />

        <com.example.tfs.customviews.UserMessageLayout
            android:id="@+id/cvMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" />

        <com.example.tfs.customviews.EmojisLayout
            android:id="@+id/cvEmoji"
            android:layout_width="265dp"
            android:layout_height="wrap_content" />

    </com.example.tfs.customviews.PostLayout>

</LinearLayout>