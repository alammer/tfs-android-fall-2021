<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvTopic"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="@color/purple_200"
        android:text="Topic: #testing"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvTopic"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/tvTopic"
        app:layout_constraintBottom_toTopOf="@+id/cvSend"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"/>

    <LinearLayout
        android:id="@+id/cvSend"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent">

        <EditText
            android:id="@+id/etTopicName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="6dp"
            android:textSize="20sp"
            android:textColor="@color/purple_200"
            android:text="#testing"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/imgPlus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_text_plus" />

            <EditText
                android:id="@+id/etMessage"
                android:layout_width="338dp"
                android:layout_height="match_parent"
                android:text="Написать..."
                android:textColor="@color/purple_200"
                android:textSize="20sp"
                android:layout_marginEnd="12dp"/>

        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>